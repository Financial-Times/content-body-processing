					<constructor-arg>
						<value>(&lt;p&gt;)(&lt;/p&gt;)|(&lt;p/&gt;)</value>
					</constructor-arg>
				</bean>
				
				<bean class="com.ft.api.content.items.v1.services.bodyprocessing.xml.StAXTransformingBodyProcessor">
					<constructor-arg ref="xmlEventReaderFactory" />
					<constructor-arg>
						<bean class="com.ft.api.content.items.v1.services.bodyprocessing.xml.eventhandlers.StructuredWordPressSourcedBodyXMLEventHandlerRegistry" />
					</constructor-arg>
					<constructor-arg>
						<bean class="com.ft.api.content.items.v1.services.bodyprocessing.writer.HTML5VoidElementHandlingXMLBodyWriterFactory">
							<constructor-arg>
								<bean class="org.codehaus.stax2.XMLOutputFactory2" factory-method="newInstance"  />
							</constructor-arg>
						</bean>
					</constructor-arg>
				</bean>								
				<!--  get rid of any empty p tags added during processing (e.g. when adding an aside tag) -->
				<bean class="com.ft.api.content.items.v1.services.bodyprocessing.regex.RegexRemoverBodyProcessor">
					<constructor-arg>
						<value>(&lt;p&gt;)(&lt;/p&gt;)</value>
					</constructor-arg>
				</bean>		
				<bean class="com.ft.api.content.items.v1.services.bodyprocessing.xml.StAXTransformingBodyProcessor">
					<constructor-arg ref="xmlEventReaderFactory" />
					<constructor-arg>
						<bean class="com.ft.api.content.items.v1.services.bodyprocessing.xml.eventhandlers.PlainTextFromStructuredXMLEventHandlerRegistry" />
					</constructor-arg>
					<constructor-arg>
						<bean class="com.ft.api.content.items.v1.services.bodyprocessing.writer.PlainTextBodyWriterFactory" />
					</constructor-arg>
				</bean>
				<bean class="com.ft.api.content.items.v1.services.bodyprocessing.regex.RegexReplacerBodyProcessor">
					<constructor-arg>
						<value>\n+</value>
					</constructor-arg>
					<constructor-arg>
						<ref bean="LINE_FEED" />
					</constructor-arg>
				</bean>
			</list>
		</constructor-arg>
	</bean>

	<bean id="xmlEventReaderFactory" class="com.ft.api.content.items.v1.services.bodyprocessing.xml.XMLEventReaderFactory">
		<constructor-arg>
			<bean class="org.codehaus.stax2.XMLInputFactory2" factory-method="newInstance" />
		</constructor-arg>
	</bean>

