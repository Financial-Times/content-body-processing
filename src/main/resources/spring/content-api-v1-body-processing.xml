		class="com.ft.api.content.items.v1.services.bodyprocessing.BodyProcessorChain">
		<constructor-arg>
			<list>
				<!-- remove any line breaks already present, as we will be mapping paragraph marks to line breaks -->
				<bean class="com.ft.api.content.items.v1.services.bodyprocessing.regex.RegexRemoverBodyProcessor">
					<constructor-arg>
						<value>\r+</value>
					</constructor-arg>
				</bean>
				<bean class="com.ft.api.content.items.v1.services.bodyprocessing.regex.RegexRemoverBodyProcessor">
